[sub_resource type="GDScript" id="GDScript_wdcdh"]
resource_name = "screen_break_controller"
script/source = "extends Node

@export var window : Window
@export var screen_window : Window
@export var screen_texture_rect : TextureRect
@export var bg_control : Control
@export var break_sound : AudioStreamPlayer

var velocity : float = -10

func do_event() -> void:
	bg_control.visible = false
	screen_window.visible = false
	window.visible = false
	var main_window_screen = DisplayServer.window_get_current_screen(DisplayServer.MAIN_WINDOW_ID)
	var screen_pos = DisplayServer.screen_get_position(main_window_screen)
	var screen_size = DisplayServer.screen_get_size(main_window_screen)
	window.size = Vector2i(randi_range(512, 1024), randi_range(128, 512))
	window.position = Vector2i(randi_range(10, screen_size.x - window.size.x - 10), randi_range(10, screen_size.y - window.size.y - 10)) + screen_pos
	
	screen_window.position = window.position + Vector2i(32,32)
	screen_window.size = window.size - Vector2i(64,64)
	
	screen_texture_rect.texture = ImageTexture.create_from_image(DisplayServer.screen_get_image_rect(Rect2i(screen_window.position, screen_window.size)))
	
	velocity = -10
	window.visible = true
	screen_window.visible = true
	bg_control.visible = true
	break_sound.play()

func _process(_delta: float) -> void:
	if screen_window.visible:
		velocity += 0.5
		@warning_ignore(\"narrowing_conversion\")
		screen_window.position.y += velocity
"

